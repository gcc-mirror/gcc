					   stack 8-byte alignment.  */
#endif
	SAVE_MAC_REGS
	SAVE_FPU_REGS
#if defined(NDS32_NESTED) || defined(NDS32_NESTED_READY)
       mfsr    $r1, $IPC       /* Get IPC.  */
       mfsr    $r2, $IPSW      /* Get IPSW.  */
       smw.adm $r1, [$sp], $r2, #0x0   /* Push IPC, IPSW.  */
#endif
.endm
