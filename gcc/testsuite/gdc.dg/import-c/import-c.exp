# Load support procs.
load_lib gdc-dg.exp

# Initialize `dg'.
dg-init

# Main loop.
gdc-dg-runtest [lsort \
       [glob -nocomplain $srcdir/$subdir/*.d ] ] "" \
       "-I $srcdir/$subdir -finclude-imports"

# All done.
dg-finish
