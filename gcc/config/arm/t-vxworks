MULTILIB_OPTIONS = \
  mrtp fPIC \
  t4/t4be/t4t/t4tbe/t5/t5be/t5t/t5tbe/tstrongarm/txscale/txscalebe
MULTILIB_MATCHES = fPIC=fpic
# Don't build -fPIC multilibs for kernel or Thumb code.
